<% if flash[:notice] %>
    <div class="ui-state-highlight ui-corner-all" style="padding:0.7em"><span class="ui-icon ui-icon-info" style="float:left; margin-right:.3em"></span><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
    <div class='ui-state-error ui-corner-all' style="padding:0.7em;"><span class="ui-icon ui-icon-alert" style="float:left; margin-right: .3em"></span><%= flash[:error] %></div>
<% end %>
<div class="ui-widget ui-widget-content ui-corner-all" style="padding: 15px; margin-top:10px;">
    <h2><%= t 'prelim.your_info' %></h2>
    <p>
      <%= form_tag( update_url ) do -%>
        <table>
          <tr>
            <td><%= t 'index.firstname' %></td>
            <td><%= text_field_tag 'firstname', @host.user.firstname, :placeholder => t('index.firstname') %></td>
          </tr>
          <tr>
            <td><%= t 'index.lastname' %></td>
            <td><%= text_field_tag 'lastname', @host.user.lastname, :placeholder => t('index.lastname') %></td>
          </tr>
          <tr>
            <td><%= t 'index.email' %></td>
            <td><%= email_field_tag 'email', @host.user.email, :placeholder => t('index.email_suggestion'), :size => 40 %></td>
          </tr>
          <tr>
            <td><%= t 'index.account' %></td>
            <td><%= email_field_tag 'account', @host.user.account, :placeholder => t('index.account_suggestion'), :size => 40 %></td>
          </tr>
          <tr>
            <td colspan="2" align="center"><%= submit_tag t('index.submit'), :class => "submit" %></td>
          </tr>
        </table>
      <% end -%>
    </p>
</div>
<div class="ui-widget ui-widget-content ui-corner-all" style="padding: 15px; margin-top:10px;">
    <p>
      <%= t 'confirm.list_of_computers' %> <%= @user.hosts.count %>
      <table>
        <% @user.hosts.each do |host| -%>
            <tr>
              <td>MAC:</td>
              <td><%= host.mac %></td>
            </tr>
        <% end -%>
      </table>
    </p>
    <h2>
      <%= t 'confirm.add_computer' %>
    </h2>
    <p>
      <%= form_tag( add_host_url ) do %>
        <table>
            <tr>
              <td colspan="2"><%= t 'confirm.enter_mac_address' %></td>
            </tr>
            <tr>
              <td>MAC:</td>
              <td><%= text_field_tag 'mac', nil, :placeholder => '001122334455', :size => 17 %></td>
            </tr>
            <tr>
                <td colspan="2" align="center"><%= submit_tag t('index.submit'), :class=>"submit" %></td>
            </tr>
        </table>
      <% end -%>
    </p>
</div>