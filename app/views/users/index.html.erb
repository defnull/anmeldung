<%= link_to "Deutsch <img src='/images/de.png' />".html_safe, (Rails.env == "production") ? index_url(:locale => "de", :host=>"10.10.8.1") : index_url(:locale => "de") %> |
<%= link_to "English <img src='/images/gb.png' />".html_safe, (Rails.env == "production") ? index_url(:locale => "en", :host=>"10.10.8.1") : index_url(:locale => "en") %>
<div id="content">
    <h1><%= t 'index.welcome' %></h1>
    <h2><%= t 'index.access_question' %></h2>
    <p><%= t 'index.access_answer' %>
        <ol>
            <li><%= t 'index.access_answer_1' %> <strong><%= t 'index.access_answer_2' %></strong></li>
            <li><%= t 'index.access_answer_3' %></li>
            <li><%= t 'index.access_answer_4' %></li>
        </ol>
    </p>
    <h2><%= t 'index.did_already_question' %></h2>
    <p><%= t 'index.did_already_answer' %></p>
    <h2><%= t 'index.enter_information' %></h2>
    <p>
      <%= form_tag( (Rails.env == "production") ? create_url(:host => "10.10.8.1") : create_url ) do -%>
          <table>
            <% if @adress_conflict %>
                <tr>
                  <td colspan="3" class="error"><%= t 'conflict.adress_in_use1' %><%= "#{@other_user.lastname}, #{@other_user.firstname}" %></td>
                </tr>
                <tr>
                  <td colspan="3"><%= t 'conflict.adress_in_use2' %></td>
                </tr>
                <tr>
                  <td colspan="3"><%= select_tag 'adress_conflict', options_for_select({t('conflict.mistype') => 'mistype', t('conflict.new_resident') => 'new_resident', t('conflict.new_computer') => 'new_computer', t('conflict.add_computer') => 'add_computer'}) %></td>
                </tr>
            <% end -%>
            <% if @ip_exhausted %>
                <tr>
                  <td colspand="3" class="error"><%= t 'conflict.ip_adresses_exhausted' %></td>
                </tr>
            <% end -%>
            <tr>
              <td><%= t 'index.firstname' %></td>
              <td <%= @user.errors[:firstname].empty? ? '' : 'class=error' %>><%= text_field_tag 'firstname', @user.firstname, :placeholder => t('index.firstname') %></td>
              <td><%= @user.errors[:firstname].empty? ? "" : "#{t('index.firstname')} #{@user.errors[:firstname][0]}" %></td>
            </tr>
            <tr>
              <td><%= t 'index.lastname' %></td>
              <td <%= @user.errors[:lastname].empty? ? '' : 'class=error' %>><%= text_field_tag 'lastname',@user.lastname, :placeholder => t('index.lastname') %></td>
              <td><%= @user.errors[:lastname].empty? ? "" : "#{t('index.lastname')} #{@user.errors[:lastname][0]}" %></td>
            </tr>
            <tr>
              <td><%= t 'index.email' %></td>
              <td <%= @user.errors[:email].empty? ? '' : 'class=error' %>><%= email_field_tag 'email', @user.email, :placeholder => t('index.email_suggestion'), :size => 40 %></td>
              <td><%= @user.errors[:email].empty? ? "" : "#{t('index.email')} #{@user.errors[:email][0]}" %></td>
            </tr>
            <tr>
              <td><%= t 'index.account' %></td>
              <td><%= email_field_tag 'account', @user.account, :placeholder => t('index.account_suggestion'), :size => 40 %> <%= t 'index.account_not_required' %></td>
              <td></td>
            </tr>
            <tr >
              <td><%= t 'index.house' %></td>
              <td <%= @user.errors[:adress].empty? ? '' : 'class=error' %>><%= number_field_tag 'house', params[:house].nil? ? 2 : params[:house], :min => 2, :max => 13, :size => 2 %></td>
              <td rowspan="2"><%= @user.errors[:adress].empty? ? "" : t('user.adress.not_a_valid_house_or_room_nr') %></td>
            </tr>
            <tr>
              <td><%= t 'index.room' %></td>
              <td <%= @user.errors[:adress].empty? ? '' : 'class=error' %>>
                <%= number_field_tag 'room', params[:room].nil? ? 0 : params[:room], :min => 0, :max => 430, :size=> 3 %> <strong><%=  t 'index.or' %></strong>
                <%= select_tag 'special_room', options_for_select({'---------------------------------------' => 'norm_0', t('index.guest_room1') => 'guest_1', t('index.guest_room2') => 'guest_2',t('index.notquartier1') => 'not_1', t('index.notquartier2') => 'not_2', t('index.notquartier3') => 'not_3',t('index.appartment1') => 'app_1', t('index.appartment2') => 'app_2',t('index.wohnung1') => 'wohn_1', t('index.wohnung2') => 'wohn_2'}) %>
              </td>
            </tr>
            <tr>
              <td colspan="3">
                <%= submit_tag t('index.submit') %>
              </td>
            </tr>
          </table>
      <% end -%>
    </p>
    <h2><%= t 'index.faq' %></h2>
    <ul>
        <li><strong><%= t 'index.faq_already_registered_question' %></strong><br />
            <%= t 'index.faq_already_registered_answer' %></li>
        <li><strong><%= t 'index.faq_broken_question' %></strong><br />
            <%= t 'index.faq_broken_answer' %></li>
        <li><strong><%= t 'index.faq_additional_question' %></strong><br />
            <%= t 'index.faq_additional_answer' %></li>
        <li><strong><%= t 'index.faq_limit_question' %></strong><br />
            <%= t 'index.faq_limit_answer_1' %><br /><%= t 'index.faq_limit_answer_2' %></li>
        <li><strong><%= t 'index.faq_nat_question' %></strong><br />
            <%= t 'index.faq_nat_answer_1' %><br /><%= t 'index.faq_nat_answer_2' %><br /><%= t 'index.faq_nat_answer_3' %></li>
        <li><strong><%= t 'index.faq_wrong_data_question' %></strong><br />
            <%= t 'index.faq_wrong_data_answer' %>
            <ol>
              <li><%= t 'index.faq_wrong_data_email' %></li>
              <li><%= t 'index.faq_wrong_data_personal' %></li>
              <li><%= t 'index.faq_wrong_data_address' %></li>
            </ol>
            <%= t 'index.faq_wrong_data_purpose' %>
        </li>
    </ul>
</div>